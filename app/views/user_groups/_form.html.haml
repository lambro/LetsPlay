= form_for @user_group do |f|
  - if @user_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_group.errors.count, "error")} prohibited this user_group from being saved:"
      %ul
        - @user_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :group_id
    = f.number_field :group_id
  .actions
    = f.submit 'Save'
