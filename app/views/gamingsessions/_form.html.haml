= form_for @gamingsession do |f|
  - if @gamingsession.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gamingsession.errors.count, "error")} prohibited this gamingsession from being saved:"
      %ul
        - @gamingsession.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :online
    = f.check_box :online
  .field
    = f.label :min_age_limit
    = f.datetime_select :min_age_limit
  .field
    = f.label :max_age_limit
    = f.datetime_select :max_age_limit
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :gsdate
    = f.datetime_select :gsdate
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :location_name
    = f.text_field :location_name
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :console_id1
    = f.number_field :console_id1
  .field
    = f.label :console_id2
    = f.number_field :console_id2
  .field
    = f.label :console_id3
    = f.number_field :console_id3
  .actions
    = f.submit 'Save'
