= form_for @console do |f|
  - if @console.errors.any?
    #error_explanation
      %h2= "#{pluralize(@console.errors.count, "error")} prohibited this console from being saved:"
      %ul
        - @console.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :console_image
    = f.text_area :console_image
  .field
    = f.label :console_logo
    = f.text_area :console_logo
  .actions
    = f.submit 'Save'
