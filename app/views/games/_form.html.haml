= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :console_id
    = f.number_field :console_id
  .field
    = f.label :logo
    = f.text_area :logo
  .field
    = f.label :image
    = f.text_area :image
  .actions
    = f.submit 'Save'
