= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :min_age
    = f.datetime_select :min_age
  .field
    = f.label :max_age
    = f.datetime_select :max_age
  .actions
    = f.submit 'Save'
